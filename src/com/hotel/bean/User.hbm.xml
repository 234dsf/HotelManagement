<?xml version="1.0" encoding="utf-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>
	<class name="com.hotel.bean.User" table="user">
		<id name="userid" type="java.lang.Integer" column="userid">
			<generator class="identity"></generator>
		</id>
		
		<property name="username" type="java.lang.String">
			<column name="username" length="45" not-null="false">
			</column>
		</property>
		
		<property name="password" type="java.lang.String">
			<column name="password" length="45" not-null="false">
			</column>
		</property>
		
		<property name="mobile" type="java.lang.String">
			<column name="mobile" length="45" not-null="false">
			</column>
		</property>
		
		<property name="email" type="java.lang.String">
			<column name="email" length="45" not-null="false">
			</column>
		</property>
	</class>

</hibernate-mapping>